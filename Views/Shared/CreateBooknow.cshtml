@model ModelViewController.Models.Booknow;

<form method="post" app-controller="Booknow" asp-action="CreateBooknow">
  <div class="mb-3">
    <label  class="form-label">Amount</label>
    <input type="number" asp-for="amount" class="form-control" >
  </div>
  <div class="mb-3">
    <label  class="form-label">Hotel Name</label>
    <input type="text" asp-for="hotelname" class="form-control" >
  </div>
 
  <button type="submit" class="btn btn-primary" asp-controller="Booknow" asp-action="CreateBooknow">Submit</button>
</form>